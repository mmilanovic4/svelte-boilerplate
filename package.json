{
	"name": "svelte-boilerplate",
	"version": "1.0.0",
	"description": "A simple boilerplate for creating Svelte applications using Webpack.",
	"author": {
		"name": "Miloš Milanović",
		"email": "mmilanovic016@gmail.com"
	},
	"scripts": {
		"clean": "rm -rf dist/*",
		"format": "prettier --write src/**/*.{js,json,svelte,css} .prettierrc.json package.json webpack.config.js",
		"build:dev": "webpack --env dev --progress",
		"build:prod": "webpack --progress",
		"build:stats": "webpack --progress --profile --json > stats.json"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mmilanovic4/svelte-boilerplate.git"
	},
	"devDependencies": {
		"copy-webpack-plugin": "^8.1.1",
		"css-loader": "^5.2.4",
		"css-minimizer-webpack-plugin": "^3.0.0",
		"mini-css-extract-plugin": "^1.6.0",
		"prettier": "^2.3.0",
		"prettier-plugin-svelte": "^2.3.0",
		"style-loader": "^2.0.0",
		"svelte": "^3.38.2",
		"svelte-loader": "^3.1.1",
		"terser-webpack-plugin": "^5.1.2",
		"webpack": "^5.37.0",
		"webpack-cli": "^4.7.0"
	}
}
