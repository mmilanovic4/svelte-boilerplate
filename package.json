{
	"name": "svelte-boilerplate",
	"version": "1.0.0",
	"description": "A simple boilerplate for creating Svelte applications using Webpack.",
	"author": {
		"name": "Miloš Milanović",
		"email": "mmilanovic016@gmail.com"
	},
	"scripts": {
		"clean": "rm -rf dist/*",
		"format": "prettier --write src/**/*.{js,json,svelte,css} .prettierrc.json package.json webpack.config.js",
		"build:dev": "webpack --progress",
		"build:prod": "webpack --env.prod --progress",
		"build:stats": "webpack --env.prod --progress --profile --json > stats.json",
		"start:dev": "webpack-dev-server --content-base dist --host 0.0.0.0 --port 8000 --open --disable-host-check"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mmilanovic4/svelte-boilerplate.git"
	},
	"devDependencies": {
		"copy-webpack-plugin": "^5.1.1",
		"css-loader": "^3.4.2",
		"mini-css-extract-plugin": "^0.9.0",
		"prettier": "1.19.1",
		"prettier-plugin-svelte": "^0.7.0",
		"style-loader": "^1.1.3",
		"svelte": "^3.18.2",
		"svelte-loader": "^2.13.6",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	}
}
